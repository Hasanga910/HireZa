<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/jobseeker/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveProfileServlet</servlet-name>
        <servlet-class>controller.SaveProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveProfileServlet</servlet-name>
        <url-pattern>/SaveProfileServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>controller.EditProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/EditProfileServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CVServlet</servlet-name>
        <servlet-class>controller.CVServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CVServlet</servlet-name>
        <url-pattern>/cv</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompanyProfileServlet</servlet-name>
        <servlet-class>controller.CompanyProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyProfileServlet</servlet-name>
        <url-pattern>/company/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompanyProfileServlet</servlet-name>
        <url-pattern>/company/edit-profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JobSearchServlet</servlet-name>
        <servlet-class>controller.JobSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobSearchServlet</servlet-name>
        <url-pattern>/search-jobs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitApplicationServlet</servlet-name>
        <servlet-class>controller.SubmitApplicationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitApplicationServlet</servlet-name>
        <url-pattern>/submit-application</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <servlet-class>controller.MyApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <url-pattern>/jobseeker/Myapplication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PendingJobPostsServlet</servlet-name>
        <servlet-class>controller.PendingJobPostsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PendingJobPostsServlet</servlet-name>
        <url-pattern>/admin/pending-jobs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteJobPostServlet</servlet-name>
        <servlet-class>controller.DeleteJobPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteJobPostServlet</servlet-name>
        <url-pattern>/admin/DeleteJobPostServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>controller.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/admin/ChangePasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JobDetailsServlet</servlet-name>
        <servlet-class>controller.JobDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobDetailsServlet</servlet-name>
        <url-pattern>/JobDetailsServlet</url-pattern>
    </servlet-mapping>



</web-app>